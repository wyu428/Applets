.pages{
  padding-bottom:90rpx;
}
swiper{
  height: 60vw;
  text-align: center;
}
swiper image{
  width: 60%;
}
.name_row{
  display: flex;
  border-top: 5rpx solid #dedede;
  border-bottom: 5rpx solid #dedede;
  padding: 10rpx 0;
  
}
.name{
  flex: 5;
  font-size: 30rpx;
  padding: 0 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.collect{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;align-items: center;
  border-left: 1rpx solid #000;
}
.price{
  color: var(--themeColor);
  padding: 15rpx;
  font-size: 32rpx;
  font-weight: 600;

}
.goodtitle{
  padding: 15rpx;
  color: var(--themeColor);
  font-size: 30rpx;
  font-weight: 600;
}
.tabs{
width: 100%;
display: flex;
position: fixed;
bottom: 0;
left: 0;
height: 90rpx;

background-color: #fff;
}
.people{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-size: 24rpx;
  position: relative;
}
.people button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  
  }
.share{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;align-items: center;
  font-size: 24rpx;
  position: relative;
}
.share button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  
  }
  navigator{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;align-items: center;
  font-size: 24rpx;
  position: relative;
}
.tabscar{
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  background-color: #ffa500;
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
  position: relative;
}
.tabsbuy{
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;background-color: #eb4450;
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
}
.icon-shoucang{
  color: #eb4450;
}