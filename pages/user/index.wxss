.userinfowrap{
  height: 45vh;
  background-color: var(--themeColor);
  position: relative;
  overflow: hidden;
}
.img{
  position: relative;
}
 .img>image{
  width: 100%;
  height: 50vh;
  filter: blur(10rpx);
}
.userinfo{
 position: absolute;
 left: 50%;
 transform: translateX(-50%);
 top: 20%;
 text-align: center;
}
.usericon{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.username{
  color: #fff;
  margin-top: 40rpx;
  font-size: 40rpx;
}
.userbtn{
  
  position: absolute;
  left: 50%;
  top: 40%;
  transform: translate(-50%);
  border: 1rpx solid greenyellow;
  font-size: 38rpx;
  border-radius: 10%; 
}
.userbtn>navigator{
  padding: 30rpx;
}
.content{
  position: relative;
 
 
}
.main{
  padding-bottom: 100rpx;
color: #666;
position: absolute;
width: 90%;
left: 50%;
transform: translate(-50%);
top:-40rpx
}
.collect_item{
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
  font-size:22rpx;
}
.collect{
  display: flex; 
  background-color:#fff;
}
.font{
  color: var(--themeColor);
}
.order{
  margin-top: 30rpx;
  background-color: #fff;
}
.ordertitle{
padding: 20rpx;
font-size: 24rpx;
border-bottom: 1rpx solid #ccc;
}
.ordercontent{
  display: flex;

}
.ordercontent navigator{
  flex: 1;
  padding: 15rpx 0;
  text-align: center;
}
.iconfont {
 color: var(--themeColor);
 font-size: 40rpx;
}
.icontext{
  font-size: 24rpx;
}
.address{
  margin-top: 30rpx;
  padding: 20rpx 0;
  font-size: 24rpx;
}
.app_info{
  margin-top: 30rpx;
  
}
.app_info_item{
  font-size: 24rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ccc;
}
.app_info_item.app_contact{
  display: flex;
  justify-content: space-between;
}
.recommend{
  font-size: 24rpx;
  margin-top: 30rpx;
}
  
