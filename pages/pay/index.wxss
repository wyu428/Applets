page{
  padding-bottom: 90rpx;
}
.but{
  padding: 20rpx;
}
button{
  width: 100%;
}
.userinfo{
  display: flex;
  font-size: 24rpx;
  
  padding: 20rpx;
}
.info{
flex: 5;

}
.phone{
flex: 2;
text-align: right;
}
.cartcar{
  font-size: 30rpx;
  border-bottom: 1px solid currentColor;
  border-top: 1rpx solid currentColor;
  padding: 20rpx;
  color: var(--themeColor);
}
.item{
  display: flex;
  
}

.cartimage{
  flex: 2;
  display: flex;
justify-content: center;
align-items: center;
}
image{
  width:80%
}

.cartinfo{
  flex: 4;
 padding: 20rpx;
 

}
.goodname{
  display: -webkit-box;
  overflow: hidden; 
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.goodinfo{
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}
.price{
  color: var(--themeColor);
  font-size: 32rpx;

}
.num{
  display: flex;
  
  

}

.goodnum{
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;

}
.foottool{
display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  border-top: 1px solid #000;
}

  

.total{
  flex: 4;
  text-align: right;
  padding: 4rpx 10rpx;
 
}
.total text{
  color: var(--themeColor);
 
}
.total view{
  font-size: 24rpx;
  /* padding: 10rpx 0;
  */
  
}

.pay{
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 500;
  font-size: 30rpx;
  color: #fff;
  background-color: var(--themeColor);
}